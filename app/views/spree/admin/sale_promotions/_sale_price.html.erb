<div class="col-lg-12 col-md-12 spree-product-sale-price" data-hook="sale_prices_row" id="<%= sale_price.id %>">
  <div class="col-md-2">
  	<%= sale_price.name %>
  </div>  

  <div class="col-md-2">
  	<%= display_type sale_price.kind %>
  </div>

  <div class="col-md-2">
  	<%= display_discount sale_price.kind, sale_price.value %>
  </div>

  <div class="col-md-2">
  	<%= display_datetime sale_price.start_at %>
  </div>

  <div class="col-md-2">
  	<%= display_datetime sale_price.end_at %>
  </div>

  <div class="col-md-2">
  	<%= display_status sale_price.status %>
  </div>

</div>
