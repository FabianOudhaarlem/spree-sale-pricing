<div class="col-lg-12 col-md-12 spree-product-sale-price" data-hook="sale_prices_row" id="<%= sale_promotion.id %>">
  <div class="col-md-2">
  	<%= sale_promotion.name %>
  </div>  

  <div class="col-md-2">
  	<%= display_type sale_promotion.kind %>
  </div>

  <div class="col-md-2">
  	<%= display_discount sale_promotion.kind, sale_promotion.value %>
  </div>

  <div class="col-md-2">
  	<%= display_datetime sale_promotion.start_at %>
  </div>

  <div class="col-md-2">
  	<%= display_datetime sale_promotion.end_at %>
  </div>

  <div class="col-md-1">
  	<%= display_status sale_promotion.status %>
  </div>

  <div class="col-md-1">
    <a class="btn btn-primary btn-sm icon-link with-tip action-edit no-text" href="<%= edit_admin_sale_promotion_path(sale_promotion) %>"><span class="icon icon-edit"></span></a>
    <a class="btn btn-danger btn-sm delete-resource icon-link with-tip action-delete no-text" data-method="delete" data-confirm="Are you sure?" href="<%= admin_sale_promotion_path(sale_promotion) %>"><span class="icon icon-delete"></span></a>
  </div>

</div>
